{
    "openapi": "3.0.0",
    "info": {
        "title": "ERP para oficinas e afins",
        "description": "Platarforma para administração de oficinas e afins",
        "version": "1.0.0"
    },
    "paths": {
        "/api/admin/client": {
            "get": {
                "tags": [
                    "Admin"
                ],
                "summary": "lista todos os clientes",
                "operationId": "IndexClient",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "Bearer {token}"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "succes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Client"
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Unauthorizes"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Admin"
                ],
                "summary": "cria novo cadastro de cliente",
                "operationId": "createClient",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Token de acesso do usuário",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "Bearer {token}"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Request body to create cliente",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Client"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Client"
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Unauthorizes"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/admin/user/{client_id}": {
            "post": {
                "tags": [
                    "Admin"
                ],
                "summary": "cria novo usuário para cliente",
                "description": "cria novo usuário para um cliente, e registra a(s) role(s)",
                "operationId": "storeUser",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Token de acesso do usuário",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "Bearer {token}"
                        }
                    },
                    {
                        "name": "client_id",
                        "in": "path",
                        "description": "Id do cliente",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "description": "dados para criação de usuário",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "user": {
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "example": "Marcelo Dantas"
                                            },
                                            "email": {
                                                "type": "string",
                                                "example": "teste@rteste.ko"
                                            },
                                            "password": {
                                                "type": "string",
                                                "example": "testesenha"
                                            }
                                        },
                                        "type": "object"
                                    },
                                    "roles": {
                                        "description": "chaves indices das roles",
                                        "type": "array",
                                        "items": {
                                            "type": "integer"
                                        },
                                        "example": "{1, 2, 3}"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "usuario criado"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Não autorizado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Unauthenticated."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Login de usuário",
                "description": "Autentica usuário e retorna token",
                "operationId": "loginUser",
                "requestBody": {
                    "description": "Dados de login do usuário",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "usuario@gmm.com.br"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuário autenticado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "description": "Token de acesso",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciais inválidas",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "Mensagem de erro",
                                            "type": "string",
                                            "example": "Credenciais invalidas"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erro de validação",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "Mensagem de error",
                                            "type": "string",
                                            "example": "Credenciais invalidas"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Internal server error"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/logout": {
            "delete": {
                "tags": [
                    "Auth"
                ],
                "summary": "Logout de usuário",
                "description": "Revoga o token de acesso do usuário e realiza o logout.",
                "operationId": "logoutUser",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Token de acesso do usuário",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "Bearer {token}"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Logout realizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Logout realizado com sucesso."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthenticated"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao fazer logout",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Ocorreu um erro ao fazer logout."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "Client": {
                "title": "Client",
                "description": "dados do cliente",
                "properties": {
                    "id": {
                        "description": "id do cliente",
                        "type": "integer",
                        "format": "int64"
                    },
                    "razao_social": {
                        "description": "razão social",
                        "type": "string"
                    },
                    "cnpj": {
                        "description": "cnpj do cliente",
                        "type": "string"
                    },
                    "inscricao_estadual": {
                        "description": "inscrição estadual do cliente",
                        "type": "string",
                        "nullable": true
                    },
                    "inscricao_municipal": {
                        "description": "inscrição municipal do cliente",
                        "type": "string",
                        "nullable": true
                    },
                    "endereco": {
                        "description": "endereço",
                        "type": "string"
                    },
                    "numero": {
                        "description": "numero",
                        "type": "string"
                    },
                    "bairro": {
                        "description": "bairro",
                        "type": "string"
                    },
                    "cep": {
                        "description": "cep",
                        "type": "string"
                    },
                    "cidade": {
                        "description": "cidade",
                        "type": "string"
                    },
                    "estado": {
                        "description": "estado",
                        "type": "string"
                    },
                    "celular": {
                        "description": "celular",
                        "type": "string"
                    },
                    "email": {
                        "description": "email",
                        "type": "string"
                    }
                },
                "type": "object"
            }
        }
    }
}